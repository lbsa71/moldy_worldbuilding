{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client", "astro/client"],
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "outDir": "dist"
  },
  "exclude": ["node_modules", "src/game/wasm/assembly/**/*"]
}
